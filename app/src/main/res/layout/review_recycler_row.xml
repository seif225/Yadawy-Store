<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        android:id="@+id/user_profile_picture_review_recycler_row"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

       android:id="@+id/user_name_review_recycler_row"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/user_profile_picture_review_recycler_row"
        app:layout_constraintStart_toEndOf="@+id/user_profile_picture_review_recycler_row"
        app:layout_constraintTop_toTopOf="@+id/user_profile_picture_review_recycler_row" />

    <TextView
        android:id="@+id/review_recycler_row_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/user_name_review_recycler_row"
        app:layout_constraintHorizontal_bias="0.05"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="@+id/user_name_review_recycler_row"
        app:layout_constraintTop_toBottomOf="@+id/user_name_review_recycler_row"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/review_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.9"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_name_review_recycler_row"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_name_review_recycler_row"
        app:layout_constraintTop_toTopOf="@+id/user_name_review_recycler_row" />




</android.support.constraint.ConstraintLayout>