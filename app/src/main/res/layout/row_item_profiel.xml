<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"

    android:orientation="vertical">

<android.support.v7.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="8dp"
    android:layout_margin="5dp"
    >
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/profile_picture_row_item_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:layout_margin="8dp"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_name_profile_row_item"
        app:layout_constraintStart_toEndOf="@id/profile_picture_row_item_profile"
        app:layout_constraintTop_toTopOf="@id/profile_picture_row_item_profile"
        app:layout_constraintBottom_toBottomOf="@+id/profile_picture_row_item_profile"
        android:text="seif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        android:textSize="18sp"
        android:textColor="#000000"

        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/profile_picture_row_item_profile"
        android:src="@drawable/user"
        android:id="@+id/product_picture_row_item_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_name_row_item_profile"
        app:layout_constraintStart_toStartOf="@id/product_picture_row_item_profile"
        app:layout_constraintEnd_toEndOf="@id/product_picture_row_item_profile"
        app:layout_constraintTop_toTopOf="@id/product_picture_row_item_profile"
        app:layout_constraintBottom_toBottomOf="@id/product_picture_row_item_profile"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.9"
        android:text="current product"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:elevation="8dp"
        android:shadowColor="#fefefe"
        />


</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
</LinearLayout>