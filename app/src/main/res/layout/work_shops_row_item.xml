<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="18dp"
    android:elevation="8dp"
    app:cardCornerRadius="18dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/user_name_workshop_row_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="user name"
            android:textSize="20sp"
            android:textColor="#000000"
            />

        <ImageView
            android:id="@+id/workshop_imageVew"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:src="@drawable/user"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_name_workshop_row_item" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/workshop_imageVew"
            app:layout_constraintTop_toTopOf="@+id/workshop_imageVew"
            app:layout_constraintStart_toStartOf="@+id/workshop_imageVew"
            app:layout_constraintVertical_bias="1"
            android:padding="16dp"
            android:id="@+id/workShop_linear_container"
            android:background="#8B000000"
            />

        <TextView
            android:id="@+id/workshop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:text="workshop name"
            android:textColor="#FEFEFE"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintBottom_toBottomOf="@+id/workShop_linear_container"
            app:layout_constraintEnd_toEndOf="@+id/workShop_linear_container"
            app:layout_constraintStart_toStartOf="@+id/workShop_linear_container"
            app:layout_constraintTop_toTopOf="@+id/workShop_linear_container" />




    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>